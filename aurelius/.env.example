# AURELIUS Configuration File
# Copy this file to .env and fill in your actual API keys and configuration

# OpenAI/OpenRouter Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENAI_MODEL=openai/gpt-4o
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Twitter/X API Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Mastodon Configuration
MASTODON_ACCESS_TOKEN=your_mastodon_access_token
MASTODON_API_BASE_URL=https://mastodon.social

# Discord Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_WEBHOOK_URL=your_discord_webhook_url
DISCORD_CHANNEL_ID=your_discord_channel_id

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id

# Redis Configuration (Optional - will use local storage if not provided)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Rate Limiting Configuration
TWITTER_DAILY_POST_LIMIT=50
TWITTER_HOURLY_POST_LIMIT=5
MASTODON_DAILY_POST_LIMIT=100
MASTODON_HOURLY_POST_LIMIT=10
DISCORD_DAILY_POST_LIMIT=200
DISCORD_HOURLY_POST_LIMIT=20

# System Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/aurelius.log
DATA_STORAGE_PATH=data/

# AI Prompt Configuration
DEFAULT_SYSTEM_PROMPT=You are AURELIUS, an AI assistant for automated business management and sales. Generate engaging, professional content for social media and sales communications.
SALES_PROMPT_TEMPLATE=Generate a compelling sales message for {product} targeting {audience}. Keep it professional and engaging.

# Webhook Configuration
WEBHOOK_PORT=8080
WEBHOOK_HOST=0.0.0.0
